numeros = list()
pares = 0
res = 's'
while res == 's':

    inteiro = int(input("Insira um número inteiro:"))
    numeros.append(inteiro)
    res = str(input('Quer continuar? [s/n] '))
    if inteiro % 2 == 0:
        pares = pares + 1

print("A quantidade de números pares é: {} ".format(pares))  














